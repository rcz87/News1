# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Security Configuration
# Generate a secure random string for session secret
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-secure-random-session-secret-here-min-64-characters

# CORS Configuration
# Comma-separated list of allowed origins
# Use wildcard for subdomains: https://*.yourdomain.com,https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://*.yourdomain.com

# Optional: Database Configuration (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Optional: External API Keys (if needed)
# ANALYTICS_ID=your-analytics-id
# SENTRY_DSN=your-sentry-dsn
